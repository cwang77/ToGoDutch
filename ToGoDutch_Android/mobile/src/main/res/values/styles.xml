<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarTheme" parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="TableCellHighlight">
        <item name="android:background">@drawable/cell_background_highlight</item>
    </style>
    <style name="TableCellMatte">
        <item name="android:background">@drawable/cell_background_matte</item>
    </style>

    <style name="AuthInfoEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">@dimen/login_account_info_margin</item>
    </style>

</resources>
