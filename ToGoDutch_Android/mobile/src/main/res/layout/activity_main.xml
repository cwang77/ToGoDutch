<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/stats_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow
            android:id="@+id/table_1st_row">
            <TextView
                android:layout_column="1"
                android:layout_height="@dimen/table_cell_height_double"
                android:text="@string/table_title_people"
                style="@style/TableCellMatte"/>
            <include layout="@layout/table_column_subject" />

        </TableRow>

        <include
            android:id="@+id/table_2nd_row"
            layout="@layout/table_row_subject_highlight" />

    </TableLayout>

    <Button
        android:id="@+id/row_plus_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/row_plus_btn_txt"
        android:layout_below="@id/stats_table">
    </Button>

    <Button
        android:id="@+id/col_plus_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/col_plus_btn_txt"
        android:layout_below="@+id/row_plus_btn"
        android:layout_alignParentStart="true">
    </Button>

</RelativeLayout>
